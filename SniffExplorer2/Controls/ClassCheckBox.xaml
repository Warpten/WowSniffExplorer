<CheckBox x:Class="SniffExplorer.UI.Controls.ClassCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SniffExplorer.UI.Controls"
             x:Name="root"
             mc:Ignorable="d">
    <CheckBox.Content>
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding Icon, ElementName=root}" Width="14" Height="14" Margin="0,0,3,0" />
            <TextBlock Text="{Binding Text, ElementName=root}" />
        </StackPanel>
    </CheckBox.Content>
</CheckBox>
