<CheckBox x:Class="SniffExplorer.UI.Controls.RaceCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             x:Name="root">
    <CheckBox.Content>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="icon" Source="{Binding Icon, ElementName=root}" Width="14" Height="14" Margin="0,1,3,0" Visibility="Collapsed" />
            <TextBlock Text="{Binding Text, ElementName=root}" />
        </StackPanel>
    </CheckBox.Content>
</CheckBox>
